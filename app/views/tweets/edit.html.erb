<body id="contact">
  
  <!-- header始まり -->
  <header>
    <div class="logo">
      <a href="/"><img src="/assets/logo5.png" alt="SNAPPERS"></a>
    </div>
    <nav>
      <ul class="global-nav">
        <% if user_signed_in? %>
          <li><%= current_user.nickname %></li>
          <li id="store"><a href="/tweets/tweet">Store</a></li>
          <li id="store"><a href="/tweets/new">New</a></li>
          <li><%= link_to "MyPage", "/users/#{current_user.id}" %></li>
          <li><%= link_to "LogOut", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "LogIn", new_user_session_path, class: 'post' %></li>
          <li><%= link_to "NewUser", new_user_registration_path, class: 'post' %></li>
        <% end %>
      </ul>
    </nav>
  </header>
  <!-- header終わり -->
  
  <!-- wrap始まり -->
  <div id="wrap" class="clearfix">
    <div class="content">
      <div class="main">
        <div class="contents row">
          <div class="container">
            <%= form_with(model: @tweet, local: true) do |form| %>
              <h3>
                編集する
              </h3>
              <%= form.text_field :image, placeholder: "Image Url" %>
              <%= form.text_area :text, placeholder: "text" , rows: "10" %>
              <%= form.submit "SEND" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <aside class="sidebar">
        <section>
          <h2>Store Location</h2>
          <ul>
            <li><a href="">北海道</a></li>
            <li><a href="">東北</a></li>
            <li><a href="">関東</a></li>
            <li><a href="">東海</a></li>
            <li><a href="">関西</a></li>
            <li><a href="">中国・四国</a></li>
            <li><a href="">九州</a></li>
          </ul>
        </section>
        
      </aside>
  </div>
  <!-- wrap終わり -->
  
  <!-- footer始まり -->
  <footer>
    <small>(C)2017 Hattori-studio.</small>
  </footer>
  <!-- footer終わり -->
  
</body>